
<div class="fakefriendsform">
  <%= simple_form_for(@fake_friend, html: { class: "formcontainer"}) do |f| %>
    <%= f.input :name %>
    <%= f.input :gender %>
    <%= f.input :age %>
    <%= f.input :address, label_html: { class: "popo" }%>
    <%= f.input :main_description %>
    <%= f.input :categories, as: :check_boxes, collection: Category.all %>
    <%= f.input :photo, as: :file %>
    <%= f.submit %>
  <% end %>


