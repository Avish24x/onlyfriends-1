<div class="row justify-content-center">
  <div class="col-sm-8 my-3">
    <%= form_with url: fake_friends_path, method: :get, class: "d-flex" do %>
      <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Type a keyword, ex: Volleyball"
        %>
      <%= submit_tag "Search", name: "", class: "btn btn-primary search-bar" %>
    <% end %>
  </div>
</div>

  <div class="all-profile-container">
   <% @fake_friends.each do |fake_friend| %>
      <div class="card-container">
        <img src='https://i.pinimg.com/564x/61/88/81/61888128ab65bde930ff3ce56f7727d0.jpg' alt='profile image' class="profile-img">
        <ul class="name-age">
          <li><h1 class="name"><%= fake_friend.name %></h1></li>
          <li><h1 class="age"><%= fake_friend.age %></h1></li>
        </ul>
        <p class="description"><%= fake_friend.main_description.first(70) %>...</p>
        <button class='card-btn'> <%= link_to "View Profile", fake_friend_path(fake_friend)%></button>
      </div>
   <% end %>
 </div>

